@using Microsoft.AspNetCore.Identity
@using EssayStorage.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Search" asp-action="StartSearch" method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @if((await UserManager.GetUserAsync(User)).IsAdmin)
            {
                 <li><a asp-area="" asp-controller="Admin" asp-action="AdminPanel">Панель администрирования</a></li>
            }
           
            <li>
                <input type="search" class="form-control" placeholder="..." name="Data" autocomplete="off" style="margin-top:7px" />
            </li>
            <li>
                <button type="submit" class="form-control" style="margin-top:7px;margin-left:2px;margin-right:10px">Поиск</button>
            </li>
            @if((await UserManager.GetUserAsync(User)).IsBlocked)
            {
                 <li><a asp-area="" title="Manage" asp-controller="Manage" asp-action="Index">Личный кабинет</a></li>
            }
            else
            {
                 <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Личный кабинет</a></li>
            }           
            <li><a asp-area="" asp-controller="Account" asp-action="Logout">Log out</a></li>

        </ul>
    </form>
}
else
{
    <form asp-area="" asp-controller="Search" asp-action="StartSearch" method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <input type="search" class="form-control" placeholder="search" name="Data" autocomplete="off" style="margin-top:7px" />
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Поиск</button>
            </li>
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>

        </ul>
    </form>
}